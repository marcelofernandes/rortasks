<p id="notice"><%= notice %></p>

<h1>Listing Testcases</h1>

  <ul class="w3-ul w3-hoverable">

    <% @testcases.each do |testcase| %>
      <li class="w3-border">
        <p><span class="w3-tag w3-blue"><%= testcase.code %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.title %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.summary %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.preconditions %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.status %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.importance %></span></p>
        <p><span class="w3-tag w3-blue"><%= testcase.minutes %></span></p>
        <p><span class="w3-tag w3-blue"><%= link_to 'Show', testcase %></td>
        <p><span class="w3-tag w3-blue"><%= link_to 'Edit', edit_testcase_path(testcase) %></span></p>
        <p><span class="w3-tag w3-blue"><%= link_to 'Destroy', testcase, method: :delete, data: { confirm: 'Are you sure?' } %></span></p>
     </li>
    <% end %>

</ul>

